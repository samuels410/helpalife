        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-48535318-1', 'helpalife.in');
        ga('send', 'pageview');
    </script>
</head>
<body>

<%= render 'layouts/new_header' %>
<% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>" style="width: 695px;margin-left: 332px;margin-top: 10px;
            text-align: center;">
      <%= value %>
    </div>
<% end %>
<%= yield %>

<%= render 'layouts/new_footer' %>
</body>
</html>
