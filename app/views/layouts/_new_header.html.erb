            <li>
              <%= link_to 'My Organizations', my_organizations_path, :'data-no-turbolink' => true %>
            </li>
            <li> <%= link_to 'Profile', edit_user_registration_path %> </li>
            <li> <%= link_to 'Sign out', destroy_user_session_path, rel: 'nofollow' %> </li>
          </ul>
        </li>
      <% else  %>
        <li class="last">
          <a href="#" data-toggle="modal" data-target="#login" id='register_option'>
            <span>Register / Login</span>
          </a>
        </li>
      <% end %>
