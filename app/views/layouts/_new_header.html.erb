          <a href="<%= about_path %>">
            <span>About</span>
            <i class="icon2"></i>
          </a>
          <ul style="width: 184%;">
            <!--<li><a href="#">Testimonials</a></li>-->
            <li><a href="<%= about_path %>">About Us</a></li>
            <li><a href="<%= terms_path %>">Terms & conditions</a></li>
            <li><a href="<%= vision_path %>">Vision & Mission</a></li>
            <li><a href="<%= contacts_path %>">Contact Us</a></li>
          </ul>
