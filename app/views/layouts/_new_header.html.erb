<div class="header">
  <div class="wrap">
    <div class="logo">
      <%= link_to image_tag('logo.png',:class =>"img img-circle",
        :style => "width: 75px;",:alt => "blood donors"),root_path %>
    </div>

    <div class="h_right">
      <h4>
        <span>
          <small>Love All. Do Good. Live Well. Help A Life</small>
        </span> - helpalife.in
      </h4>

      <!-- start nav-->
      <ul class="flexy-menu thick orange">
        <li class="active">
          <a  href="<%= root_path %>">
            <span class="color">Home</span>
            <i class="icon3"></i>
          </a>
        </li>

        <li>
          <a href="<%= needs_path %>">
            <span>Requirements</span>
          </a>
        </li>

        <li>
          <a href="<%= donors_path %>">
            <span>Find Donors</span>
          </a>
