<style type="text/css">
    body {
        background-color: white;
        font-family: 'PTSerifRegular','Times','serif'; color: #0a647b;
    }
</style>
<% provide(:title, "Contact and feed back of helpalife.in" ) %>
<%= image_tag "contactus.png",style: "width: 100%;
height: 158px;" ,alt: "contact us"%>
<br>
<br>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h4>Send your feed back,suggestion or feature request etc..</h4>
      <br>
      <%= simple_form_for @contact, url: contact_path(@contact), html: { class: 'form-horizontal' },
                          wrapper: :horizontal_form do |f| %>
          <%= f.error_notification %>

          <%= f.input :name, placeholder: 'Name' ,as: :string%>

          <%= f.input :email, placeholder: 'Email',as: :string %>

          <%= f.input :subject, placeholder: 'Subject' ,as: :string %>

          <%= f.input :message, placeholder: 'Message...'  , :input_html => {:rows => 6}%>

          <%= f.submit "Send " ,class: "btn btn-primary"%>
      <% end %>


    </div>
  </div>
</div>

<br>
<br>